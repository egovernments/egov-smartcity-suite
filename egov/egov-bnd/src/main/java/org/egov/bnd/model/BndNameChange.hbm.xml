<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.egov.bnd.model.BndNameChange" table="EGBD_NAMECHANGE">

		<id name="id" column="ID" type="int">
			<generator class="sequence">
				<param name="sequence_name">SEQ_EGBD_NAMECHANGE</param>
			</generator>
		</id>
		<timestamp column="LASTUPDATEDTIMESTAMP" name="lastUpatedTimestamp"
			access="property" unsaved-value="null" />

		<property name="firstName">
			<column name="FIRSTNAME" />
		</property>
		<property name="middleName">
			<column name="MIDDLENAME" />
		</property>
		<property name="lastName">
			<column name="LASTNAME" />
		</property>

		<property name="oldfirstname">
			<column name="OLD_FIRSTNAME" />
		</property>
		<property name="oldmiddlename">
			<column name="OLD_MIDDLENAME" />
		</property>
		<property name="oldlastname">
			<column name="OLD_LASTNAME" />
		</property>

		<property name="remarks">
			<column name="REMARKS" />
		</property>

		<many-to-one name="lastModifiedBy"
			class="org.egov.infra.admin.master.entity.User" column="USERID"
			fetch="select" />

		<property name="receiptNo">
			<column name="VOUCHER_NUM" />
		</property>

		<many-to-one name="citizen" class="org.egov.portal.entity.Citizen"
			column="ID_CITIZEN" cascade="save-update" />
	</class>

</hibernate-mapping>

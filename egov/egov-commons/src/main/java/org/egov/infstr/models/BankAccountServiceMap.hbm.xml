<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.egov.infstr.models.BankAccountServiceMap" table="egcl_bankaccountservicemapping" >
		<id name="id" type="long">
			<column name="ID" precision="22" scale="0" />
			<generator class="sequence">
				<param name="sequence">seq_egcl_bankaccountservicemapping</param>
			</generator>
		</id>

		<many-to-one name="createdBy" class="org.egov.infra.admin.master.entity.User"
			fetch="select">
			<column name="CREATEDBY" precision="22" scale="0" />
		</many-to-one>
		<property name="createdDate" column="CREATEDDATE" type="timestamp" />
		<property name="modifiedDate" column="LASTMODIFIEDDATE" type="timestamp" />
		<property name="fromDate" column="fromdate" type="date" />
		<property name="toDate" column="todate" type="date" />
		<many-to-one name="modifiedBy" class="org.egov.infra.admin.master.entity.User"
			fetch="select">
			<column name="LASTMODIFIEDBY" precision="22" scale="0" />
		</many-to-one>

		<many-to-one name="serviceDetails" class="org.egov.infstr.models.ServiceDetails"
			fetch="select">
			<column name="servicedetails" precision="22" scale="0" not-null="true" />
		</many-to-one>

		<many-to-one name="bankAccountId" class="org.egov.commons.Bankaccount"
			fetch="select">
			<column name="bankaccount" precision="22" scale="0"
				not-null="true" />
		</many-to-one>

		<many-to-one name="deptId" class="org.egov.infra.admin.master.entity.Department"
			fetch="select">
			<column name="department" precision="22" scale="0"
				not-null="true" />
		</many-to-one>
		
		<many-to-one name="ecsType" class="org.egov.infstr.models.ECSType"
			fetch="select">
			<column name="ECSTYPE" precision="22" scale="0" />
		</many-to-one>
		
	</class>
	<query name="GETSERVICETYPENOTMAPPED">
    <![CDATA[select s from  ServiceDetails s where id not in(select bs.serviceDetails from BankAccountServiceMap bs)order by id]]></query>
    
	<query name="BANK_NAME_ATLEAST_ONE_BRANCH">
		<![CDATA[select b from org.egov.commons.Bank b where b.id in (select bb.bank from org.egov.commons.Bankbranch bb)]]>
	</query>
	      
    <query name="BANKBRANCH_NAME_ATLEAST_ONE_BRANCH">
		<![CDATA[select bb from org.egov.commons.Bankbranch bb where bb.id in(select ba.bankbranch from org.egov.commons.Bankaccount ba) ]]>
	</query>

	<query name="BANKACCOUNT">
		<![CDATA[select ba from org.egov.commons.Bankaccount ba ]]>
	</query>
	     
</hibernate-mapping>
		
  <joined-subclass name="Ptdemand" table="EGPT_PTDEMAND" extends="org.egov.demand.model.EgDemand">
    <key column="ID_DEMAND" />
   <many-to-one name="egptProperty"  column="ID_PROPERTY" not-null="true" class="org.egov.ptis.domain.entity.property.PropertyImpl" insert="false" update="false" />	
	 
	 <one-to-one name="dmdCalculations" lazy="proxy"

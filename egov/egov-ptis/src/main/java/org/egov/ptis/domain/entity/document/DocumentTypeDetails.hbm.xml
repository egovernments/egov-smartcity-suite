<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.egov.ptis.domain.entity.document.DocumentTypeDetails"
		table="EGPT_DOCUMENT_TYPE_DETAILS">
		<id name="id" column="ID" type="java.lang.Long">
			<generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
				<param name="sequence_name">SEQ_EGPT_DOCUMENT_TYPE_DETAILS</param>
			</generator>
		</id>
		<property name="basicPropertyId" column="ID_BASIC_PROPERTY" type="java.lang.Long" />
		<property name="documentName" column="DOCUMENT_NAME" type="java.lang.String" />
		<property name="documentNo" column="DOCUMENT_NO" type="java.lang.String" />
		<property name="documentDate" column="DOCUMENT_DATE" type="java.util.Date" />
		<property name="proceedingNo" column="PROCEEDING_NO" type="java.lang.String" />
		<property name="proceedingDate" column="PROCEEDING_DATE" type="java.util.Date" />
		<property name="signed" column="SIGNED" type="java.lang.Boolean" />
		<property name="courtName" column="COURTNAME" type="java.lang.String" />
		<many-to-one name="createdBy"
			class="org.egov.infra.admin.master.entity.User" column="CREATEDBY" />
		<many-to-one name="modifiedBy"
			class="org.egov.infra.admin.master.entity.User" column="LASTMODIFIEDBY" />
		<property name="createdDate" column="CREATEDDATE" type="timestamp" />
		<property name="modifiedDate" column="LASTMODIFIEDDATE" type="timestamp" />
	</class>
	
	<query name="DOCUMENT_TYPE_DETAILS_BY_ID">
           <![CDATA[select dtd from org.egov.ptis.domain.entity.document.DocumentTypeDetails dtd where dtd.basicPropertyId = ?]]></query>
	
</hibernate-mapping>
